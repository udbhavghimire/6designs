RewriteEngine On

# Ensure www
RewriteCond %{HTTP_HOST} !^www\. [NC]
RewriteRule ^(.*)$ https://www.sixdesign.ca/$1 [L,R=301]

# Handle city pages
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([a-zA-Z0-9-]+)-idx-website-for-realtors/?$ idx-website-for-realtors/index.php?city=$1 [L,QSA]

# Prevent direct access to PHP files
<FilesMatch "city-template\.php$">
    Order Deny,Allow
    Deny from all
</FilesMatch>